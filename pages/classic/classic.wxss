.container {
  display: flex;
  flex-direction: column;
}

.header {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  align-items: center;
  justify-content: space-between;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
}

.like {
  margin-top: 6rpx;
}

.like-container {
  display: inline-flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.share-btn {
  margin-top: 28rpx;
  margin-right: 30rpx;
}

.share {
  width: 40rpx;
  height: 40rpx;
}